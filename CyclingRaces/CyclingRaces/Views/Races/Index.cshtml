@model IEnumerable<CyclingRaces.Data.Models.Race>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string currentSort = ViewData["CurrentSort"] as string;

    string Arrow(string field)
    {
        if (currentSort == field.ToLower()) return "↑";
        if (currentSort == field.ToLower() + "_desc") return "↓";
        return "";
    }
}
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get" class="mb-3">
    <div class="form-inline">
        <label class="mr-2">Type:</label>
        <select name="raceTypeFilter" class="form-control mr-3" asp-items="@(ViewData["RaceTypes"] as SelectList)">
            <option value="">All</option>
        </select>

        <label class="mr-2">Location:</label>
        <select name="locationFilter" class="form-control mr-3" asp-items="@(ViewData["Locations"] as SelectList)">
            <option value="">All</option>
        </select>

        <label class="mr-2">Search:</label>
        <input type="text" name="searchString" value="@ViewData["SearchString"]" class="form-control mr-3" placeholder="Race or Organiser" />

        <button type="submit" class="btn btn-primary">Filter</button>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">
                    Name @Arrow("Name")
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["LocationSortParm"]">
                    Location @Arrow("Location")
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParm"]">
                    Date @Arrow("Date")
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["TypeSortParm"]">
                    Type @Arrow("Type")
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["DistanceSortParm"]">
                    Distance @Arrow("Distance")
                </a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["OrganiserSortParm"]">
                    Organiser @Arrow("Organiser")
                </a>
            </th>
            <th></th>
        </tr>
    </thead>

    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Distance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Organiser.UserName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
