@model CyclingRaces.Web.ViewModels.Models.RaceResultViewModel

@{
    ViewData["Title"] = "Delete Result";
}

<h2>Delete Result</h2>
<h4>Are you sure you want to delete this result?</h4>
<div>
    <h5>Race: @Model.Race</h5>
    <h5>Cyclist: @Model.CyclistName</h5>
    <h5>Time: @Model.OverallTime</h5>
    <h5>Rank: @Model.OverallRank</h5>
</div>
<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
