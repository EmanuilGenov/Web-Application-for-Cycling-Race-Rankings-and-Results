@model IEnumerable<CyclingRaces.Web.ViewModels.Models.RaceResultViewModel>
@{
    ViewData["Title"] = "Race Results";
    var currentFilter = ViewData["CurrentFilter"] as string;
}

<h1>Race Results</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Add a New Result</a>
</p>

<form asp-action="Index" method="get" class="form-inline mb-3">
    <input type="text" name="searchString" value="@currentFilter" class="form-control mr-2" placeholder="Search race or cyclist" />
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["RaceSortParm"]">Race</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["CyclistSortParm"]">Cyclist</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["TimeSortParm"]">Time</a></th>
            <th><a asp-action="Index" asp-route-sortOrder="@ViewData["RankSortParm"]">Rank</a></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Race</td>
                <td>@item.CyclistName</td>
                <td>@(item.OverallTime?.ToString() ?? "-")</td>
                <td>@item.OverallRank</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
